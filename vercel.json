{
  "version": 2,
  "builds": [
    { "src": "api/*.py", "use": "@vercel/python" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/simple", "dest": "/api/simple.py" },
    { "src": "/api/chat", "dest": "/api/simple.py" },
    { "src": "/api/models", "dest": "/api/models.py" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/frontend/dist/index.html" }
  ],
  "env": {
    "QWEN3_API_KEY": "${QWEN3_API_KEY}",
    "QWEN3_API_ENDPOINT": "${QWEN3_API_ENDPOINT}"
  }
}
